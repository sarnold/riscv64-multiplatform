+
+        //pp_srcAddr_next(ppNum, srcAddr, 0, 0);
+        //pp_srcOffset_cfg(ppNum, 0x0, 0x0, 0x0);
+
+    } else {
+        //if((src->format == COLOR_YUV420_NV21) || (src->format == COLOR_YUV420_NV12)){
+        if(src->format == COLOR_YUV420_NV21) {    //ok
+            next_y_rgb_addr = srcAddr;
