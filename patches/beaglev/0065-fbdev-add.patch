+        }
+
+        if(src->format == COLOR_YUV420_NV12) {    //ok
+            next_y_rgb_addr = srcAddr;
+            next_u_addr = srcAddr+size;
+            next_v_addr = srcAddr+size+1;
+            y_rgb_ofst = 0;
+            uofst = 0;
+            v_uvofst = size;
